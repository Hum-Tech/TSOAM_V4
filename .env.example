# TSOAM Church Management System Environment Configuration
# Copy this file to .env and update the values for your local setup

# Server Configuration
PORT=3001
NODE_ENV=production
CLIENT_URL=http://localhost:3000

# Database Configuration (MySQL/MariaDB)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=tsoam_church_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./server/uploads

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@tsoam.org

# Church Information
CHURCH_NAME=The Seed of Abraham Ministry (TSOAM)
CHURCH_ADDRESS=Nairobi, Kenya
CHURCH_PHONE=+254 700 000 000
CHURCH_EMAIL=admin@tsoam.org

# Security Configuration
SESSION_SECRET=your-session-secret-key
BCRYPT_ROUNDS=12

# Network Configuration
# Set this to your computer's IP address for LAN access
# Find your IP with: ipconfig (Windows) or ifconfig (Mac/Linux)
LAN_IP=192.168.1.100

# Backup Configuration
BACKUP_PATH=./backups
AUTO_BACKUP=true
BACKUP_INTERVAL=24
